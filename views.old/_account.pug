            .col-lg-6.align-self-center
              .right-side.full-height.bg-border
                .section-heading
                  h3.text-white.fw-600 Configuracion de tu cuenta
                form.form-style-2.form-style-3.form-user-data
                  .row
                    .col-md-12
                      .form-group
                        .input-group
                          span.input-group-preappend
                            i.fas.fa-key
                          input#name.form-control.form-control-custom(type='text' name='name' placeholder='Tu nombre' value=`${user.name}`)
                    .col-md-12
                      .form-group
                        .input-group
                          span.input-group-preappend
                            i.fas.fa-envelope
                          input#email.form-control(type='email' name='email' placeholder='Email' value=`${user.email}`)
                    .col-md-12
                      .form-group.form__photo-upload
                        img.form__user-photo(src=`assets/images/users/${user.photo}`, alt='User photo')
                        input.form__upload(type='file', accept='image/*', id='photo', name='photo')
                        label(for='photo') Escoje una nueva foto

                    .col-md-12
                      button.btn-first.btn-submit-fill.full-width(type='submit') Guardar Cambios
                .section-heading.mt-4
                  h3.text-white.fw-600 Cambio de contrasena
