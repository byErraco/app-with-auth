                | Muy recomendable
          button.btn-first.btn-submit#book-service(data-service-id=`${service.id}`)
            | Haz tu Cita
          h3.text-custom-black.fw-700 Contactame
          form.form-style-2.mt-4.form-service-data
            .row
              .col-md-12
                .form-group
                  .input-group
                    span.input-group-preappend
                      i.fas.fa-quote-left
                    input#nameService.form-control(type='text' name='name' placeholder='Asunto' )
              .col-md-12
                .form-group
                  .input-group
                    span.input-group-preappend
                      i.fas.fa-comment
                    textarea#summary.form-control.form-control-custom(type='text' name='name' placeholder='Descripcion' style='height: 100px;')
              .col-md-12
                input#publishedBy(type='hidden' name='publishedBy' value=`${user.id}`)

                button.btn-first.btn-submit-fill.full-width(type='submit') Contactar
          .signature-sec.mb-4
            .signature-right
              img.img-fluid.image-fit(src='/assets/images/logo.png' alt='Logo')
      .col-lg-6
        .about-right-side-img.p-relative
          .first-img.p-relative
            img.img-fluid.full-width(src=`/assets/images/users/${service.imageCover}` alt='about us')
