            .col-lg-6
              .padding-40.full-height.bg-white
                .align-self-center
                  -if (user.role === 'admin')
                    ul.nav.nav-tabs
                      li.nav-item
                        a.nav-link.active(data-toggle='tab' href='#home') Crear Servicio
                      li.nav-item
                        a.nav-link(data-toggle='tab' href='#menu1') Mis servicios
                      //- li.nav-item
                      //-   a.nav-link(data-toggle='tab' href='#menu2') Menu 2
                    .tab-content
                      #home.container.tab-pane.active
                        form.form-style-2.mt-4.form-service-data
                          .row
                            .col-md-12
                              .form-group
                                .input-group
                                  span.input-group-preappend
                                    i.fas.fa-quote-left
                                  input#nameService.form-control(type='text' name='name' placeholder='Titulo del servicio' )
                            .col-md-12
                              .form-group
                                .input-group
                                  span.input-group-preappend
                                    i.fas.fa-dollar-sign
                                  input#price.form-control.form-control-custom(type='text' name='price' placeholder='Precio' )
                            .col-md-12
                              .form-group
                                .input-group
                                  span.input-group-preappend
                                    i.fas.fa-comment
                                  textarea#summary.form-control.form-control-custom(type='text' name='name' placeholder='Descripcion')
                            .col-md-12
                              .form-group
                                label(for='category') Categoria
                                select#category.form-control.form-control-custom
                                  option(selected='') Escoje una categoria...
                                  option(value='categoria-1') Categoria 1
                                  option(value='categoria-2') Categoria 2
                                  option(value='categoria-3') Categoria 3
                                  option(value='categoria-4') Categoria 4
                                  option(value='categoria-9') Categoria 9
                                  
                            .col-md-12
                              .form-group.form__photo-upload
                                label(for='imageCover') Escoje una foto
                                input.form__upload(type='file', accept='image/*', id='imageCover', name='imageCover')
                              //- .form-group
                              //-   .input-group
                              //-     label(for='imageCover') Cover imagen
                              //-     input.form-control-file(type='file', accept='image/*', id='imageCover', name='imageCover')
                            .col-md-12
                              input#publishedBy(type='hidden' name='publishedBy' value=`${user.id}`)

                              button.btn-first.btn-submit-fill.full-width(type='submit') Publicar
                      #menu1.container.tab-pane.fade
                          .row.g-0.border.rounded.overflow-hidden.flex-md-row.mb-4.shadow-sm.h-md-250.position-relative
                            each service in services
                              .col.p-4.d-flex.flex-column.position-static
                                h3.mb-0= service.name
                                .mb-1.text-muted= service.createdAt.toLocaleString("nl",{year:"2-digit",month:"2-digit", day:"2-digit"})
                                p.card-text.mb-auto= service.summary
                                  //- | This is a wider card with supporting text below as a natural lead-in to additional content.
                                ul.nav.custom.mb-xl-20
                                  li.nav-item
                                    a.nav-link.nav-link.btn-submit(href=`/service/${service.slug}`) Ver Servicio
                                  li.nav-item
                                    button.nav-link.btn-submit.deleteService( service-data=`${service.id}`) Eliminar
                                  li.nav-item
                                    button.nav-link.btn-submit(type='button' data-toggle='modal' data-target='#exampleModalCenter' data-backdrop="false")
                                      | Actualizar

                                    #exampleModalCenter.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalCenterTitle' aria-hidden='true')
                                      .modal-dialog.modal-dialog-centered(role='document')
                                        .modal-content
                                          .modal-header
                                            h5#exampleModalCenterTitle.modal-title Modal title
                                            button.close(type='button' data-dismiss='modal' aria-label='Close')
                                              span(aria-hidden='true') &times;
                                          .modal-body
                                            | ...a
                                          .modal-footer
                                            button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                                            button.btn.btn-primary(type='button') Save changes



                              .col-3.d-none.d-lg-block
                                img.img-fluid(src=`/assets/images/users/${service.imageCover}` alt='img')
